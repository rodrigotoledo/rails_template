default: &default
  adapter: postgresql
  encoding: unicode
  pool: <%= ENV.fetch("RAILS_MAX_THREADS") { 5 } %>
  username: postgres
  password: postgres
  host: <%= ENV.fetch("DATABASE_HOST") { 'localhost' } %>
  port: 5432

development:
  <<: *default
  database: app_development

test:
  <<: *default
  database: app_test

ci:
  <<: *default
  database: app_ci
